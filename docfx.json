{
  "metadata": [
    {
      "src": [
        {
          "files": [ "**/*.csproj" ],
          "exclude": [ "**/obj/**", "**/bin/**" ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [ "**/*.md" ]
      },
      {
        "files": [ "api/**.yml" ]
      }
    ],
    "dest": "docs",
    "globalMetadata": {
      "_enableSearch": true
    }
  }
}
